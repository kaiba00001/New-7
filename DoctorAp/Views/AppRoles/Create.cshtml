@model IdentityRole

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>Create Role</h2>
            <hr />
            <label asp-for="Name"></label>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-foating">
