    ViewData["Title"] = "Privacy Policy";
    string[] TableHeaders = new string[] { "Id", "Clinic Name", "Address", "Contact" };
}

<style>
    /* Add stylish and appealing styles */
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f9f9f9;
    }

    h2 {
        text-align: center;
        color: #333;
        font-size: 32px;
        margin-bottom: 30px;
    }

    h3 {
        color: #555;
        font-size: 24px;
        margin-bottom: 15px;
    }

    p {
        color: #777;
        margin-bottom: 10px;
        line-height: 1.5;
    }

    ul {
        margin-bottom: 10px;
