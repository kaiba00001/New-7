@model IEnumerable<DoctorAp.Models.LabResult>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* CSS styles */
    body {
        background-color: #f8f9fa;
        color: #212529;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #000;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th,
        .table td {
            padding: 10px;
            text-align: left;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table th {
            background-color: #f1f1f1;
            font-weight: bold;
        }

    .btn {
        color: #fff;
        text-decoration: none;
        margin-right: 10px;
        border-radius: 5px;
        padding: 5px 10px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn:hover {
        text-decoration: none;
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .create-button a {
        display: inline-block;
        padding: 10px 16px;
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .create-button a:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>




<!-- Create Lab Result form -->
<h2>Create New Lab Result</h2>
<p></p>
<form asp-action="Create">
    <label for="id">Patient Id:</label>
    <input type="text" id="id" name="id">

    <label for="patientName">Patient Name:</label>
    <input type="text" id="patientName" name="patientName">

    <label for="testType">Test Type:</label>
    <select id="testType" name="testType">
        <option value="Blood Test">Blood Test</option>
        <option value="Urine Test">Urine Test</option>
        <option value="Cholesterol Test">Cholesterol Test</option>
        <option value="Thyroid Test">Thyroid Test</option>
    </select>

    <label for="result">Result:</label>
    <input type="text" id="result" name="result">
    

    <label for="referenceRange">Reference Range:</label>
    <select id="referenceRange" name="referenceRange">
        <option value="70-100 mg/dL">70-100 mg/dL</option>
        <option value="N/A">N/A</option>
        <option value="Less than 200 mg/dL">Less than 200 mg/dL</option>
        <option value="0.4-4.0 μIU/mL">0.4-4.0 μIU/mL</option>
    </select>

    <input type="submit" value="Create">
</form>

<!-- Lab Results table -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReferenceRange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TestType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReferenceRange)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
