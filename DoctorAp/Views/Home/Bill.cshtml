@{
    ViewData["Title"] = "Receipt";
    string[] TableHeaders = new string[] { "Item", "Quantity", "CostPerItem", "Total" };
}

<style>
    .receipt {
        margin: 20px auto;
        padding: 20px;
        width: 400px;
        border: 1px solid #ccc;
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        font-size: 28px;
        margin-bottom: 20px;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        color: #555;
        font-weight: bold;
    }

    .total-row td {
        border-top: 2px solid #ddd;
    }

        .total-row td:first-child {
            font-weight: bold;
        }

    .thank-you-message {
        margin-top: 20px;
        text-align: center;
        font-size: 18px;
        color: #777;
    }

    .receipt-logo {
        text-align: center;
        margin-bottom: 20px;
    }

        .receipt-logo img {
            max-width: 100%;
            max-height: 80px;
        }

    .subtotal {
        text-align: right;
    }

    .total {
        text-align: right;
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-top: 10px;
    }
</style>

<div class="receipt">
    <h1>Receipt</h1>
    <table>
        <thead>
            <tr>
                @foreach (var head in TableHeaders)
                {
                    <th>@head</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                decimal previousItemCost = 0;
                decimal totalCost = 0; // Added variable for final total
                foreach (var data in Model)
                {
                    var total = previousItemCost + data.CostPerItem;
                    previousItemCost = total;
                    <tr>
                        <td>@data.Item</td>
                        <td>@data.Quantity</td>
                        <td>@data.CostPerItem</td>
                        <td style="display: none;">@total</td> <!-- Hide intermediate total values -->
                    </tr>
                }
                totalCost = previousItemCost; // Assign the final total value
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><strong>Total: @totalCost</strong></td> <!-- Display only the final total -->
                </tr>
            }
        </tbody>
    </table>

    <div class="thank-you-message">
        <p>Thank you for your purchase!</p>
    </div>
</div>

